---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Social Links';
const description = 'Connect with me around the web.';

// EDIT THIS LIST: Add your own links here
const links = [
    { title: 'X', url: 'https://x.com/abs_digi' },
    { title: 'GitHub', url: 'https://github.com/abs-digi' },
    { title: 'Instagram', url: 'https://instagram.com/' },
    { title: 'My Digital Garden', url: '/digital-garden' },
    { title: 'My Reading List', url: '/books' }
];
---

<BaseLayout title={title} description={description} showHeader={true}>
    <section class="mx-auto mb-16 max-w-md text-center sm:mb-24">
        <h1 class="mb-12 font-serif text-3xl italic sm:mb-16 sm:text-5xl">{title}</h1>

        <div class="flex flex-col gap-6">
            {
                links.map((link) => (
                    <a href={link.url} class="link-card block w-full border border-current px-6 py-4 font-serif text-xl italic transition-all hover:scale-105">
                        {link.title}
                    </a>
                ))
            }
        </div>
    </section>
</BaseLayout>

<style>
    /* Optional: Custom styling for the link cards */
    .link-card {
        text-decoration: none;
        /* Uses the theme's text color for the border automatically */
    }
</style>
