---
import GuestbookForm from '../components/GuestbookForm.vue';
import GuestbookList from '../components/GuestbookList.vue';
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Guestbook";
const description = "Leave a message and say hello!";
---

<BaseLayout title={title} description={description}>
  <div class="max-w-2xl mx-auto px-6 py-12">
    <header class="mb-12">
      <h1 class="font-serif text-4xl sm:text-5xl mb-4 italic">Guestbook</h1>
      <p class="text-main/60 leading-relaxed">
        Thank you for visiting my digital garden. Feel free to leave a note, share a thought, or just say hi!
      </p>
    </header>

    <GuestbookForm client:load />
    
    <GuestbookList client:load />
  </div>
</BaseLayout>
