---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "My Favorites";
const description = "A curated list of websites, tools, and pages I enjoy.";

// EDIT HERE: Add your own categories and links
const bookmarks = [ 
    {
        category: "Linux",
        links: [
            { title: "Linux Kernel Archives", url: "https://kernel.org/", desc: "Linux Kernels." },
            { title: "Distrowatch.com", url: "https://distrowatch.com/", desc: "Linux Distros." },
            { title: "The Linux Cast", url: "https://thelinuxcast.org/", desc: "Linux Content." }
        ]
    },   
    {
        category: "Static Site Generator's",
        links: [
            { title: "Eleventy/11ty", url: "https://www.11ty.dev/", desc: "Eleventy is a simpler static site generator." },
            { title: "HUGO", url: "https://gohugo.io/", desc: "The world’s fastest framework for building websites." },
            { title: "Jekyll", url: "https://jekyllrb.com/", desc: "Transform your plain text into static websites and blogs." },
            { title: "Astro.js", url: "https://astro.build/", desc: "The web framework for content-driven websites." },
        ]
    },  
    {
        category: "Obsidian",
        links: [
            { title: "Obsidian", url: "https://obsidian.md/", desc: "Sharpen your thinking. The free and flexible app for your private thoughts." },
            { title: "Obisidian Garden Gallery", url: "https://vaults.obsidian-community.com/", desc: "Obsidian Garden Gallery." },
        ]
    },  
    {
        category: "Digital/Mind Gardens",
        links: [
            { title: "Maggie Appleton's Garden", url: "https://maggieappleton.com/garden/", desc: "A collection of essays, notes, talks, podcasts, and half-baked explorations I'm always tending to." },
            { title: "Mister Chad", url: "https://mister-chad.com/welcome/", desc: "Mind Garden." },
        ]
    },   
];
---

<BaseLayout title={title} description={description} showHeader={true}>
    <section class="mx-auto max-w-3xl mb-16 sm:mb-24">
        <h1 class="mb-8 font-serif text-3xl italic sm:mb-12 sm:text-5xl">{title}</h1>
        
        <div class="space-y-12">
            {bookmarks.map((section) => (
                <div class="bookmark-category">
                    <h2 class="mb-6 font-serif text-xl font-bold italic border-b border-[var(--border-main)] pb-2">
                        {section.category}
                    </h2>
                    <ul class="grid gap-4 sm:grid-cols-2">
                        {section.links.map((link) => (
                            <li>
                                <a href={link.url} target="_blank" rel="noopener noreferrer" class="group block h-full p-4 border border-[var(--border-main)] hover:bg-[var(--text-main)] hover:text-[var(--bg-main)] transition-colors duration-200">
                                    <div class="font-bold mb-1 group-hover:underline decoration-dashed underline-offset-4">
                                        {link.title} ↗
                                    </div>
                                    {link.desc && (
                                        <div class="text-sm opacity-80 leading-snug">
                                            {link.desc}
                                        </div>
                                    )}
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>
    </section>
</BaseLayout>