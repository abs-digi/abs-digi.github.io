---
import BaseLayout from '../layouts/BaseLayout.astro';
import siteConfig from '../data/site-config';

const pageTitle = 'About';
const pageDescription = 'Learn more about me, my work, and my interests in technology and development.';
---

<BaseLayout description={pageDescription} title={pageTitle}>
    <div class="mx-auto max-w-3xl">
        <h1 class="mb-8 font-serif text-4xl font-bold leading-tight sm:text-5xl">
            About Me
        </h1>

        <div class="prose prose-lg max-w-none">
            <section class="mb-12">
                <h2>Welcome</h2>
                <p>
                    Hi, I'm Ab. Welcome to my corner of the web where I share my journey in technology,
                    development, and continuous learning. This space serves as both a personal knowledge
                    repository and a platform to share insights with others.
                </p>
            </section>

            <section class="mb-12">
                <h2>This Website</h2>
                <p>
                    This site is built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro</a>
                    and <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer">Tailwind CSS</a>,
                    combining performance with modern design principles.
                </p>
                <p>
                    Here you'll find:
                </p>
                <ul>
                    <li><strong>Garden Notes</strong> - My evolving thoughts and learnings on various topics</li>
                    <li><strong>Book Collection</strong> - Books I've read and recommend</li>
                    <li><strong>Resources</strong> - Curated links and references I find valuable</li>
                </ul>
            </section>
        </div>
    </div>
</BaseLayout>
