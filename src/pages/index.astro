---
import { getCollection } from 'astro:content';
import Button from '../components/Button.astro';
import Hero from '../components/Hero.astro';
import PostPreview from '../components/PostPreview.astro';
import siteConfig from '../data/site-config';
import BaseLayout from '../layouts/BaseLayout.astro';
import { sortItemsByDateDesc } from '../utils/data-utils';

// Fetch Blog Posts
const posts = (await getCollection('blog')).sort(sortItemsByDateDesc);
const featuredPosts = posts.slice(0, 4);

// Fetch Digital Garden Notes (garden collection)
const gardenNotes = (await getCollection('garden')).sort((a, b) =>
    new Date(b.data.created).getTime() - new Date(a.data.created).getTime()
);
const featuredGardenNotes = gardenNotes.slice(0, 4);
---

<BaseLayout description={siteConfig.description}>
    <Hero {...siteConfig.hero} />
    
    {/* Digital Garden Notes Section */}
    {
        featuredGardenNotes?.length > 0 && (
            <div class="mb-20 sm:mb-28">
                <div class="flex items-center mb-10 sm:mb-14">
                    <div class="h-px flex-grow bg-[var(--border-main)]"></div>
                    <h2 class="font-serif text-2xl sm:text-3xl font-medium px-6 text-[var(--accent)]">Digital Garden Notes</h2>
                    <div class="h-px flex-grow bg-[var(--border-main)]"></div>
                </div>
                <div class="grid gap-8 sm:gap-10">
                    {featuredGardenNotes.map((note) => (
                        <article class="border-b border-[var(--border-main)] pb-10">
                            <h3 class="font-serif text-xl leading-tight font-medium sm:text-2xl">
                                <a href={`/digital-garden/${note.id}/`} class="hover:underline hover:decoration-dashed hover:decoration-1 hover:underline-offset-4">
                                    {note.data.title}
                                </a>
                            </h3>
                            <div class="mt-2 text-sm text-[var(--text-muted)]">
                                <time datetime={note.data.created.toISOString()}>
                                    {new Date(note.data.created).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                                </time>
                                {note.data.updated && (
                                    <span class="ml-2">
                                        (Updated <time datetime={note.data.updated.toISOString()}>
                                            {new Date(note.data.updated).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                                        </time>)
                                    </span>
                                )}
                            </div>
                            {note.data.description && (
                                <p class="mt-3 text-sm leading-normal text-[var(--text-main)] opacity-90">
                                    {note.data.description}
                                </p>
                            )}
                            <div class="mt-4">
                                <a href={`/digital-garden/${note.id}/`} class="text-sm font-serif italic text-[var(--accent)] hover:underline">
                                    Read note →
                                </a>
                            </div>
                        </article>
                    ))}
                </div>
                <div class="mt-14 sm:mt-18 text-center">
                    <Button href="/digital-garden" variant="outline">Browse All Notes →</Button>
                </div>
            </div>
        )
    }

    {/* Blog Section */}
    {
        featuredPosts?.length > 0 && (
            <div class="mb-20 sm:mb-28">
                <div class="flex items-center mb-10 sm:mb-14">
                    <div class="h-px flex-grow bg-[var(--border-main)]"></div>
                    <h2 class="font-serif text-2xl sm:text-3xl font-medium px-6 text-[var(--accent)]">Blog</h2>
                    <div class="h-px flex-grow bg-[var(--border-main)]"></div>
                </div>
                <div class="grid gap-8 sm:gap-10">
                    {featuredPosts.map((post) => (
                        <PostPreview post={post} class="reveal" headingLevel="h3" />
                    ))}
                </div>
                <div class="mt-14 sm:mt-18 text-center">
                    <Button href="/blog" variant="outline">Read All Posts →</Button>
                </div>
            </div>
        )
    }
</BaseLayout>