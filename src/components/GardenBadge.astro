interface Props {
  status: 'seedling' | 'budding' | 'evergreen';
}

const { status } = Astro.props;

// Configuration for each stage (Icon + Label + Color Class)
const stages = {
  seedling: {
    icon: 'ðŸŒ±',
    label: 'Seedling',
    className: 'badge-seedling'
  },
  budding: {
    icon: 'ðŸŒ¿',
    label: 'Budding',
    className: 'badge-budding'
  },
  evergreen: {
    icon: 'ðŸŒ³',
    label: 'Evergreen',
    className: 'badge-evergreen'
