---
import siteConfig from '../data/site-config';

const socialLinks = siteConfig.socialLinks ?? [];
const navLinks = siteConfig.footerNavLinks ?? [];
const currentYear = new Date().getFullYear();

const icons: Record<string, string> = {
    X: '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16"><path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z"/></svg>'
};
---

<footer class="mx-auto w-full max-w-4xl pt-16 pb-12 sm:pt-28 sm:pb-16">
    {
        navLinks.length > 0 && (
            <nav class="mb-8 flex flex-wrap gap-x-8 gap-y-2 justify-center" aria-label="Footer navigation">
                {navLinks.map((link) => (
                    <a class="font-serif text-lg hover:text-[var(--accent)] hover:sketchy-underline transition-colors" href={link.href}>
                        {link.text}
                    </a>
                ))}
            </nav>
        )
    }
    <div class="sketchy-separator w-full max-w-2xl mx-auto my-10"></div>
    <div
        class:list={[
            'flex flex-col gap-6 pt-8',
            { 'sm:flex-row-reverse sm:items-center sm:justify-between': socialLinks.length > 0 }
        ]}
    >
        {
            socialLinks.length > 0 && (
                <div class="flex flex-wrap gap-x-6 gap-y-2 justify-center sm:justify-end">
                    {socialLinks.map((link) => (
                        <a
                            class:list={[
                                'inline-flex items-center justify-center text-sm font-handwritten text-[var(--accent)] hover:text-[var(--accent-light)] transition-colors',
                                icons[link.text] ? 'hover:opacity-75' : 'hover:underline hover:underline-offset-2'
                            ]}
                            href={link.href}
                            target="_blank"
                            rel="noopener noreferer"
                            aria-label={link.text}
                        >
                            {icons[link.text] ? <span set:html={icons[link.text]} /> : link.text}
                        </a>
                    ))}
                </div>
            )
        }
        <p class="text-sm text-center sm:text-left text-[var(--accent-light)]">
            &copy; {currentYear}
            <a class="hover:text-[var(--accent)] transition-colors" href="/">{siteConfig.title}</a>.
            <span class="block mt-2 font-handwritten text-xs">ðŸŒ¿ A digital garden, tended with care.</span>
        </p>
    </div>
</footer>