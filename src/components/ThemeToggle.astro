<button
    id="theme-toggle"
    class="-mr-2 flex h-9 w-9 cursor-pointer items-center justify-center rounded-md transition-colors hover:bg-[var(--bg-muted)]"
    aria-label="Toggle theme"
>
    <!-- Sun icon (visible in dark mode) -->
    <svg
        class="sun-icon h-6 w-6 stroke-current transition-transform duration-300 hover:rotate-45"
        viewBox="0 0 24 24"
        fill="none"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <circle cx="12" cy="12" r="4"></circle>
        <path d="M12 2v2"></path>
        <path d="M12 20v2"></path>
        <path d="m4.93 4.93 1.41 1.41"></path>
        <path d="m17.66 17.66 1.41 1.41"></path>
        <path d="M2 12h2"></path>
        <path d="M20 12h2"></path>
        <path d="m6.34 17.66-1.41 1.41"></path>
        <path d="m19.07 4.93-1.41 1.41"></path>
    </svg>
    <!-- Moon icon (visible in light mode) -->
    <svg class="moon-icon h-6 w-6 fill-current transition-transform duration-300 hover:rotate-12" viewBox="0 0 24 24">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </svg>
</button>

<style>
    /* Show moon in light mode, sun in dark mode */
    .sun-icon {
        display: none;
    }
    .moon-icon {
        display: block;
    }

    :global(.dark) .sun-icon {
        display: block;
    }
    :global(.dark) .moon-icon {
        display: none;
    }
</style>

<script is:inline>
    // Set theme ASAP to prevent flash - runs on initial page load
    (function () {
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
            document.documentElement.classList.add('dark');
        } else {
            // Default to light mode (remove dark class)
            document.documentElement.classList.remove('dark');
            // Save default if not already saved
            if (!savedTheme) {
                localStorage.setItem('theme', 'light');
            }
        }
    })();
</script>

<script>
    import tippy from 'tippy.js';
    import 'tippy.js/dist/tippy.css';

    // Load theme on every page navigation
    function loadTheme() {
        const savedTheme = localStorage.getItem('theme');
        const htmlElement = document.documentElement;

        if (savedTheme === 'dark') {
            htmlElement.classList.add('dark');
        } else {
            htmlElement.classList.remove('dark');
        }

        console.log('Theme loaded:', savedTheme || 'light (default)');
    }

    function setupThemeToggle() {
        const themeToggle = document.getElementById('theme-toggle');
        if (!themeToggle) return;

        const htmlElement = document.documentElement;

        // Load the saved theme first
        loadTheme();

        // Check if already initialized to prevent duplicate listeners
        if ((themeToggle as any)._initialized) return;
        (themeToggle as any)._initialized = true;

        // Initialize Tippy instance
        const tippyInstance = tippy(themeToggle, {
            content: '', // Initial content will be set dynamically
            placement: 'bottom',
            theme: 'custom',
            arrow: true
        });

        const updateTooltip = () => {
            const isDarkMode = htmlElement.classList.contains('dark');
            const text = isDarkMode ? 'Switch to light mode' : 'Switch to dark mode';
            themeToggle.setAttribute('aria-label', text);
            tippyInstance.setContent(text);
        };

        const toggleTheme = () => {
            const isDark = htmlElement.classList.contains('dark');

            if (isDark) {
                htmlElement.classList.remove('dark');
                localStorage.setItem('theme', 'light');
                console.log('Theme changed to: light');
            } else {
                htmlElement.classList.add('dark');
                localStorage.setItem('theme', 'dark');
                console.log('Theme changed to: dark');
            }

            updateTooltip();
        };

        updateTooltip(); // Set initial tooltip content
        themeToggle.addEventListener('click', toggleTheme);
    }

    // Run setup on page load - this fires on every navigation
    document.addEventListener('astro:page-load', setupThemeToggle);

    // Also run on after-swap to ensure theme persists during navigation
    document.addEventListener('astro:after-swap', loadTheme);
</script>

<style is:global>
    /* Custom tippy theme to match site colors */
    .tippy-box[data-theme~='custom'] {
        background-color: var(--bg-muted);
        color: var(--text-main);
        border: 1px solid var(--border-main);
        font-size: 0.875rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .tippy-box[data-theme~='custom'][data-placement^='top'] > .tippy-arrow::before {
        border-top-color: var(--border-main);
    }

    .tippy-box[data-theme~='custom'][data-placement^='bottom'] > .tippy-arrow::before {
        border-bottom-color: var(--border-main);
    }

    .tippy-box[data-theme~='custom'] > .tippy-arrow::after {
        content: '';
        position: absolute;
        z-index: -1;
    }

    .tippy-box[data-theme~='custom'][data-placement^='bottom'] > .tippy-arrow::after {
        border-bottom-color: var(--bg-muted);
        top: -7px;
        left: 0;
        border-width: 0 8px 8px;
        border-style: solid;
        border-color: transparent;
        border-bottom-color: var(--bg-muted);
    }
</style>
