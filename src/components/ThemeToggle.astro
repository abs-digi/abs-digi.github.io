<button
    id="theme-toggle"
    class="-mr-2 flex h-9 w-9 cursor-pointer items-center justify-center rounded-md transition-colors hover:bg-[var(--bg-muted)]"
    aria-label="Toggle theme"
>
    <!-- Sun icon (visible in dark mode) -->
    <svg
        class="sun-icon h-6 w-6 stroke-current transition-transform duration-300 hover:rotate-45"
        viewBox="0 0 24 24"
        fill="none"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <circle cx="12" cy="12" r="4"></circle>
        <path d="M12 2v2"></path>
        <path d="M12 20v2"></path>
        <path d="m4.93 4.93 1.41 1.41"></path>
        <path d="m17.66 17.66 1.41 1.41"></path>
        <path d="M2 12h2"></path>
        <path d="M20 12h2"></path>
        <path d="m6.34 17.66-1.41 1.41"></path>
        <path d="m19.07 4.93-1.41 1.41"></path>
    </svg>
    <!-- Moon icon (visible in light mode) -->
    <svg class="moon-icon h-6 w-6 fill-current transition-transform duration-300 hover:rotate-12" viewBox="0 0 24 24">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </svg>
</button>

<style>
    /* Show moon in light mode, sun in dark mode */
    .sun-icon {
        display: none;
    }
    .moon-icon {
        display: block;
    }

    :global(.dark) .sun-icon {
        display: block;
    }
    :global(.dark) .moon-icon {
        display: none;
    }
</style>
